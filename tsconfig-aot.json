{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "ES2015", "DOM" ],
    "sourceMap": true,
    "outDir": "aot"
  },
  "include": [
    "app/app.module.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit" : true,
    "entryModule": "app/app.module.ts#AppModule",
    "debug": false
  }
}
