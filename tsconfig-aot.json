{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2015",
    "moduleResolution": "Node",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "aot",
    "types": [ "node", "core-js" ]
  },
  "include": [
    "app/app.module.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit" : true,
    "entryModule": "app/app.module.ts#AppModule",
    "debug": false
  }
}
